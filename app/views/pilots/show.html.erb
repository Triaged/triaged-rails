					</div>
				</div>
				<!-- End Fifth Slide -->
			</div>
		</div>
	</div>

	<% end %>

	<!-- Pagination -->
	<div class="center navbar-fixed-bottom">
		<div class="row">
			<div class="col-lg-4 col-lg-offset-4 center">
				<button class="btn-custom-2" type="button" id="slideButton" href="#myCarousel" data-slide="next">
					Next
				</button>
			</div>
		</div>
