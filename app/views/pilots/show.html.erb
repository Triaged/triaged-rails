<!-- First Screen -->
<div class="hero-border">
	<div class="container fullheight">
		<!-- Welcome -->	

		<!-- Welcome Content -->
		<div class="row center">
			<div class="padding-top-sm">
				<%= image_tag "triage-logo.png" %>
			</div>
			<div class="col-lg-6 col-lg-offset-3 padding-top-sm">
				<h1>Just A Few Questions</h1>
