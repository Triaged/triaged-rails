<!-- First Screen -->

<div class="container fullheight">
	<div class="row center padding-top-sm">
		<%= image_tag "triage-logo-sm.png" %>
	</div>

	<%= simple_form_for :pilot_complete, :url => complete_pilot_path, :method => :post, :html => {:id => 'pilot_form' } do |f| %>
	
	<!-- Carousel -->	
	<div class="container fill">
		<div id="myCarousel" class="carousel slide" data-interval="false" data-wrap="false">
    		<div class="carousel-inner">

				<!-- First Slide -->
				<div class="active item">
					<div class="row center">
						<div class="col-lg-8 col-lg-offset-2 padding-top-xsm">
							<h2>Attn: All Modern Teams</h2>
							<p class="altbody padding-top-xsm">Triage will be avalible for everyone soon, but before we release it into the wild we want to make sure that every workflow is flawless, every detail polished. We're looking for awesome people to test out Triage and work with us to make it perfect. We'd love it if you'd answer some quick questions so that we can make sure your team is the right fit for our pilot. It shouldn't take more than two minutes.</p>
						</div>
					</div>
					<div class="row padding-top-sm">
						<div class="col-lg-6 col-lg-offset-3 col-sm-4 col-sm-offset-4">
							<form role="form">
							  <div class="form-group has-success-custom has-error-custom">
							    <input type="text" name="name" class="form-control form-control-custom" placeholder="Full Name">
							  </div>
							  <div class="form-group">
							    <input type="email" name="email" class="form-control form-control-custom" placeholder="Email">
							  </div>
							  <div class="form-group">
							    <input type="text" name="company" class="form-control form-control-custom" placeholder="Company">
							  </div>
							</form>
						</div>
					</div>
				</div>
				<!-- End First Slide -->

				<!-- Second Slide -->
				<div class="item">
					<div class="row center">

						<div class="col-lg-8 col-lg-offset-2 padding-top-sm">
							<h3>How large is your company?</h3>
						</div>
					</div>
					
					<div class="row padding-top center">	
						<div class="checkbox-fixed">
							<label>
								<%= render "pilots/svg/teamsm" %>
								<input type="radio" name="teamsize" value="">
								<span>1-20</span>
							</label>

							<label>
								<%= render "pilots/svg/teamm" %>
								<input type="radio" name="teamsize" value="">
								<span>21-50</span>
							</label>

							<label>
								<%= render "pilots/svg/teamlg" %>
								<input type="radio" name="teamsize" value="">
								<span>51-100</span>
							</label>

							<label>
								<%= render "pilots/svg/teamlg" %>
								<input type="radio" name="teamsize" value="">
								<span>100+</span>
							</label>
						</div>
					</div>

				</div>
				<!-- End Second Slide -->

				<!-- Third Slide -->
				<div class="item">
					<div class="row center">
						<div class="col-lg-6 col-lg-offset-3 padding-top-sm">
							<h3>What team do you work on?</h3>
						</div>
					</div>
					
					<div class="row padding-top center">
						<div class="col-lg-12 col-lg-offset-0 col-sm-10 col-sm-offset-1">	
							<div class="checkbox-fixed">
								<label>
									<%= render "pilots/svg/design" %>
									<input type="radio" name="team" value="">
									<span>Design</span>
								</label>

								<label>
									<%= render "pilots/svg/engineering" %>
									<input type="radio" name="team" value="">
									<span>Engineering</span>
								</label>

								<label>
									<%= render "pilots/svg/operations" %>
									<input type="radio" name="team" value="">
									<span>Operations</span>
								</label>

								<label>
									<%= render "pilots/svg/sales" %>
									<input type="radio" name="team" value="">
									<span>Sales</span>
								</label>

								<label>
									<%= render "pilots/svg/support" %>
									<input type="radio" name="team" value="">
									<span>Support</span>
								</label>
							</div>
						</div>
					</div>

					<!-- <div class="col-lg-12 padding-top-sm center">	
						<div class="checkbox-fixed">
							<label id="other-services">
								<input type="checkbox" name="saas" value="">
								<span>Other</span>
							</label>
							
							<div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 padding-top-sm center" id="other-services-input" style="display:none;">
								<div class="form-group">
							    <input type="text" name="saas-other" class="form-control form-control-custom" placeholder="Other Team">
							  </div>
							</div>
						</div>
					</div> -->
				</div>
				<!-- End Second Slide -->


				<!-- Fourth Slide -->
				<div class="item">
					<div class="row center">
						<div class="col-lg-8 col-lg-offset-2 padding-top-sm">
