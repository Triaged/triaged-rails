<div class="card-wrapper col-lg-6 col-lg-offset-3">
		<div class="card">
			
			<div class="row">
				<%= avatar_for event.user, event.provider %>
				
				<div class="headcontent">
					<h1 class="author"><%= event.user.name if event.user %> <%= event.title %></h1>
					<div class="timetitle">
						<p class="alt"><%= event.property_name %></p>
					</div>
				</div>
			</div>

			<div class="content row">
				<div class="contentdescription">
					<!-- Standard -->
					<!-- <%= body_helper event %> -->

					<!-- Lists -->
					<!-- <p>
						<ul class="hyphen-list">
							<li>This is the first item</li>
							<li>This is the second item</li>
							<li>This is the third item</li>
							<li>This is the fourth item</li>
							<li>This is the fifth item</li>
						</ul>
					</p> -->

					<!-- Image -->
					<div class="contentimage">
					<%= image_tag "test-image.png", :id => "image"  %>
					</div>
					<p class="imagedescription">This is a description for the image above.</p>

					<!-- Graph -->
					<!-- <div class="contentimage">
					<%= image_tag "test-graph.png", :width => "100%" %>
					</div> -->

				</div>
				<div class="contentlinks">
					<div class="floatleft">
						<%= image_tag "tm-icon@2x.png", :width => "18", :id => "timeicon" %>
						<p class="alt"><%= time_ago_in_words event.timestamp %></p>
					</div>
					<div class="floatright">
						<p><%= link_to "Open in #{event.provider.title}", event.url, :target => "blank" %></p>
					</div>
				</div>
			</div>

			<% if event.messages.exists? %>
					<%= render event.messages %>
			<% end %>
		
	</div>
</div>