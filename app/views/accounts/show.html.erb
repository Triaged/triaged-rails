<div class="container">
	<header>
		<nav class="navbar padding-top-sm">
			<div class="navbar-header">
				<%= link_to (image_tag 'triage-logo-sm.png'), apps_path %>
				<%= link_to 'Triage', apps_path, :id => "logotype" %>
			</div>
			<ul class="nav navbar-nav">
				<li class="active"><%= link_to 'Applications', apps_path %></li>
				<li><%= link_to 'Team', team_path %></li>
			</ul>
			<div class="nav navbar-nav navbar-right">
				<%= link_to 'Profile', account_path %>
			</div>
		</nav>
	</header>
  <main>	
  <div class="content">
		<div class="col-lg-6 col-lg-offset-3">
			<div class="section-header">
				<div class="app-logo">
					<%= image_tag @user.avatar.face.url, :width => 60 %>
				</div>
				<h4><%= @user.first_name %> <%= @user.last_name %></h4>
				<p><%= @user.email %></p>
				<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
			</div>
			<div class="section-content">
				<div class="section-headline">
					<h3>Settings</h3>
				</div>
				<div class="section">
					<%= simple_form_for @user, :url => account_path do |f| %>
					<form class="form-horizontal" role="form">
						<div class="form-group">
							<label for="inputEmail3" class="col-sm-2 control-label">first</label>
							<div class="col-sm-10">
								<input type="email" class="form-control" id="inputFirstName" placeholder="<%= @user.first_name %>">
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword3" class="col-sm-2 control-label">last</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="inputLastName" placeholder="<%= @user.last_name %>">
							</div>
						</div>
						<div class="form-group">
							<label for="inputPassword3" class="col-sm-2 control-label">email</label>
							<div class="col-sm-10">
								<input type="email" class="form-control" id="inputEmail" placeholder="<%= @user.email %>">
							</div>
						</div>
					</form>
				</div>
				<div class="section">
					<h4>Profile Picture</h4>
					<div class="app-status">
						<%= f.input :avatar %>
					</div>
				</div>
				<div class="section">
					<h4>Password</h4>
					<div class="app-status">
						<a href="#" class="btn btn-lg btn-success" data-toggle="modal" data-target="#passwordModal">Edit</a>
					</div>
					<%= link_to "Change your password", edit_user_registration_path %>
				</div>
				<%= f.submit %>
				<% end %>
			</div>
		</div>
	</div>
</div>
</main>
<div class="modal fade" id="passwordModal" tabindex="-1" role="dialog" aria-labelledby="passwordModal" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			Password content
		</div>
	</div>
</div>
</div>