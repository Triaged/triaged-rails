						<%= link_to image_tag("icons/bitbucket-icon-landing.png"), ""  %>
						<%= link_to image_tag("icons/newrelic-icon-landing.png"), "" %>
						<%= link_to image_tag("icons/kiln-icon-landing.png"), "" %>
						<%= link_to image_tag("icons/shopify-icon-landing.png"), "" %>
