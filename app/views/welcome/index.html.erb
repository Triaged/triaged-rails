					<p><%= link_to 'Sentry', 'http://getsentry.com', :target => "_blank"  %></p>
				</div>
			</div>

			<!-- Icons Row 2 -->
			<div class="row center-block spacing-sm">
				<div class="container" id="welcome-icons">
					<%= image_tag "icons/AppFigures-circle-icon.png", :width => "100" %>
					<p><%= link_to 'AppFigures', 'http://appfigures.com', :target => "_blank"  %></p>
				</div>
				<div class="container" id="welcome-icons">
					<%= image_tag "icons/Crashlytics-circle-icon.png", :width => "100" %>
					<p><%= link_to 'Crashlytics', 'http://crashlytics.com', :target => "_blank"  %></p>
				</div>
				<div class="container" id="welcome-icons">
					<%= image_tag "icons/HockeyApp-circle-icon.png", :width => "100" %>
					<p><%= link_to 'HockeyApp', 'http://hockeyapp.net', :target => "_blank"  %></p>
				</div>
