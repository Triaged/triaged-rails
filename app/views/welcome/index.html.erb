				<div class="row col-lg-6 center valign-middle padding-bottom">
					<%= image_tag "integrationcards/integrationcard.png" %>
				</div>

			</div>

			<!-- Additional Features -->
			<div class="container padding-top-lg">

				<!-- Onboarding -->
				<div class="row col-lg-4 center">
					<%= image_tag "feature-icons/onboarding-icon.png", :class => "featureicon" %>
