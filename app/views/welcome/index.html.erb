<!-- Hero Border -->
<div class="hero-border">
	<div class="container fullheight">
		<!-- Welcome -->	
		<div class="col-lg-12 col-sm-12 fullheight">

			<!-- Navbar-->	
			<div class="nav padding-top-sm">
				<div id="navbar-inner">
				  	<nav id="navbar-list">
				  		<%= link_to 'Home', root_path %>
						<%= link_to 'FAQ', support_path %>
						<%= link_to 'Contact', about_path %>
						<%= link_to 'Blog', "http://blog.triaged.co", :target => '_blank' %>
					</nav>
				</div>
			</div>

			<!-- Welcome Content -->
			<div class="row" id="padding-top-hero">
				<div class="col-lg-6">
					<!-- Logo Row -->
						<%= image_tag "triage-logo.png" %>
					<!-- Title Row -->
					<div class="row" id="welcome-title">
						<h1>Introducing Triage</h1>
						<h3 id="tagline">Unite your developer tools, on your phone.</h3>
					</div>
					<!-- CTA Row -->
					<div class="row" id="welcome-cta">
						<div id="hero-btn">
							<button class="btn btn-custom btn-lg" type="button" id="download-cta">
								<span class="glyphicon glyphicon-phone" style="margin-right: 20px;"></span>Text Me A Link
							</button>
						</div>
					</div>
				</div>
				<!-- Phone Image -->
				<div class="col-lg-4 col-lg-offset-2">
					<%= image_tag "screenshots/Feed.png", :class => "right" %>
					<%= video_tag ["test.ogv", "test.mp4"], :autoplay => true, :size => "239x427", :id => "hero-video", :class => "right", :loop => true %>
				</div>
			</div>

			<!-- Welcome Breadcrumb -->
			<div class="col-lg-12 center" id="hero-breadcrumb">
				<p class="light">Learn More</p>
				<%= image_tag "hero-carrot.png" %>
			</div>
		</div>
	</div>
</div>



