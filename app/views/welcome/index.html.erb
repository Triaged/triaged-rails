<div class="col-lg-12 col-sm-12 welcome">
	<div class="spacer"><br /><br /><br /></div>
	
	<div class="row">
		<div class="col-lg-6">
			<!-- Logo Row -->
			<div class="row">
				<h1><%= image_tag "logo-triage-lg.png" %><span id="logo">Triage</span</h1>
			</div>
			<!-- Title Row -->
			<div class="row" id="welcome-title">
				<h1>Everything that's happening at work, in one place.</h1>
			</div>
			<!-- CTA Row -->
			<div class="row" id="welcome-cta">
				<%= button_to 'DOWNLOAD TRIAGE', "https://itunes.apple.com/us/app/triage-everything-thats-happening/id744662903?ls=1&mt=8", 	:class => "btn btn-custom big visible-md visible-sm" %>
			<!-- Phone Image -->
				<%= render "sms_app" %>
			</div>
		</div>
		<div class="col-lg-4 col-lg-offset-2">
			<%= image_tag "iphone1.png", :width => "350" %>
		</div>
	</div>

