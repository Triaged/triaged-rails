<!-- Hero Border -->
<div class="hero-border">
	<div class="container fullheight">
		<!-- Welcome -->	
		<div class="col-lg-12 col-sm-12 fullheight">

			<!-- Navbar-->	
			<div class="navbar" role="navigation">
			    <div class="navbar-header">
			      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			        <span class="sr-only">Toggle navigation</span>
			        <span class="icon-bar-custom"></span>
			        <span class="icon-bar-custom"></span>
			        <span class="icon-bar-custom"></span>
			      </button>
			    </div>
			    <div class="collapse navbar-collapse">
			      <ul class="nav navbar-nav">
			        <li class="active"><%= link_to 'Home', root_path %></li>
			        <li><%= link_to 'FAQ', support_path %></li>
			        <li><%= link_to 'Contact', about_path %></li>
			        <li><%= link_to 'Blog', "http://blog.triaged.co", :target => '_blank' %></li>
			      </ul>
			    </div><!-- /.nav-collapse -->
			</div><!-- /.container -->

			<!-- Welcome Content -->
			<div class="row">
				<div class="col-lg-6" id="padding-top-hero">
					<!-- Logo Row -->
						<%= image_tag "triage-logo.png" %>
					<!-- Title Row -->
					<div class="row" id="welcome-title">
						<h1>Introducing Triage</h1>
						<h3 id="tagline">Unite your developer tools, on your phone.</h3>
					</div>
					<!-- CTA Row -->
					<div class="row" id="welcome-cta">
						<button class="btn btn-custom btn-lg" type="button" id="download-cta">
							<span class="glyphicon glyphicon-phone" style="margin-right: 20px;"></span>Text Me A Link
						</button>
					</div>
				</div>
				<!-- Phone Image -->
				<div class="col-lg-3 col-lg-offset-3" id="padding-top-hero">
					<%= image_tag "screenshots/Feed.png" %>
				</div>
			</div>

			<!-- Welcome Breadcrumb -->
			<div class="col-lg-12 center" id="hero-breadcrumb">
				<p class="light">Learn More</p>
				<%= image_tag "hero-carrot.png" %>
			</div>
		</div>
	</div>
</div>



