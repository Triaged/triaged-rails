<%= simple_form_for :sms_delivery, :url => capture_email_path, :method => :post, :remote => :true, :html => {:id => 'sms_delivery_form', :class => 'form-inline'} do |f| %>
			<div class="col-lg-5">
				<div class="row">
	  		<%= f.input_field :phone_number, :id => "phone_number", :placeholder => '(555) 555-5555', :autocomplete => "off"%>
	 			<%= image_tag("input-line.png", :id => "input-line", :width => 240) %>
	 		</div>
	</div>
	<div class="col-lg-5 col-lg-offset-1">
		<%= f.submit 'TEXT ME A LINK', :class => "btn btn-custom small" %>
	</div>
<% end %>