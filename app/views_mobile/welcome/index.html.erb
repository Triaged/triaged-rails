<div class="col-lg-12 col-sm-12 welcome">
	<div class="spacer"><br /><br /><br /></div>
	
	<div class="row">
		<div class="col-lg-6">
			<!-- Logo Row -->
			<div class="row center-block">
				<%= image_tag "logo-triage-lg.png", :class => "center-block" %>
				<h1><span id="logo" class="center-block">Triage</span</h1>
			</div>
			<!-- Title Row -->
			<div class="row" id="welcome-title">
				<h1>Everything that's happening at work, in one place.</h1>
			</div>
			<!-- CTA Row -->
			<div class="row" id="welcome-cta">
				
			<!-- Phone Image -->
				<%= render "sms_app" %>

			</div>
		</div>
		<div class="col-lg-4 col-lg-offset-2">
			<br /><br />
			<%= image_tag "iphone1.png", :width => "100%"%>
		</div>
	</div>

