	<div class="row">
		<div class="col-lg-6 spacing-m center">
			<%= image_tag "ia.png", :width => "85%", :id => "splash-img" %>
		</div>

		<div class="col-lg-6">
			<!-- Headline Row -->
			<div class="row">
